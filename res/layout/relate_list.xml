<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hospital_background_new"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        layout="@layout/common_title" />

    <ListView
        android:id="@+id/userslist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip" />
    
     <ImageView android:background="@drawable/nav_horizontal_line"  android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
  <LinearLayout
       android:id="@+id/addUser"
       android:layout_width="match_parent"
       android:layout_height="50.0dip"
       android:orientation="horizontal"
       android:gravity="left" >
       <ImageView android:layout_marginLeft="13.0dip" android:layout_gravity="center_vertical"    android:layout_width="35.0dip" android:layout_height="35.0dip" /> 
           <TextView android:layout_marginLeft="13.0dip" android:layout_weight="2.0" android:textColor="@color/TextColorGray" android:textSize="18.0sp" android:layout_gravity="center_vertical"   android:id="@id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="添加帐号" />
     </LinearLayout>
     
  <ImageView   android:background="@drawable/nav_horizontal_line"  android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
 
  <LinearLayout
      android:layout_marginTop="20.0dip"
       android:id="@id/item_layout1"
       android:layout_width="match_parent"
       android:layout_height="50.0dip"
       android:gravity="left" >
           <TextView   android:visibility="gone" android:layout_marginLeft="13.0dip" android:layout_weight="2.0" android:textColor="@color/TextColorBlack" android:textSize="18.0sp" android:layout_gravity="center_vertical"   android:id="@id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="我的关联帐号" />
     </LinearLayout>
     
    <ImageView   android:visibility="gone" android:background="@drawable/nav_horizontal_line"  android:layout_width="fill_parent" android:layout_height="wrap_content" />               
     <ListView
          android:visibility="gone"
        android:id="@+id/comlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip" />
    
<ImageView  android:visibility="gone" android:background="@drawable/nav_horizontal_line"  android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
    <LinearLayout
        android:visibility="gone"
       android:id="@+id/addContact"
       android:layout_width="match_parent"
       android:layout_height="50.0dip"
       android:orientation="horizontal"
       android:gravity="left" >
       <ImageView  android:visibility="gone" android:layout_marginLeft="13.0dip" android:layout_gravity="center_vertical"    android:layout_width="35.0dip" android:layout_height="35.0dip" /> 
           <TextView android:visibility="gone" android:layout_marginLeft="13.0dip" android:layout_weight="2.0" android:textColor="@color/TextColorGray" android:textSize="18.0sp" android:layout_gravity="center_vertical"   android:id="@id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="添加关联" />
     </LinearLayout>
<ImageView  android:visibility="gone" android:background="@drawable/nav_horizontal_line"  android:layout_width="fill_parent" android:layout_height="wrap_content" /> 
  <TextView android:visibility="gone" android:layout_marginLeft="13.0dip" android:layout_marginTop="8.0dip"  android:textColor="@color/TextColorGray" android:textSize="16.0sp" android:layout_gravity="center_vertical"   android:id="@id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关联帐户后，即可代收该号的相关信息."   />

</LinearLayout>